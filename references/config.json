        "#00D2FF",
        "#FF6B9D",
        "#C471ED",
        "#12CBC4",
        "#FDA7DF"
      ]
    }
  },
  "google_drive": {
    "root_folder": "Quote Images",
    "organize_by_topic": true,
    "make_public": true
  },
  "google_sheets": {
    "sheet_url": "https://docs.google.com/spreadsheets/d/1jn1DroWU8GB5Sc1rQ7wT-WusXK9v4V05ISYHgUEjYZc/edit",
    "database_worksheet": "Database",
    "max_length": 148,
    "english_only": true,
    "write_back_column": "H",
    "status_column": "I",
    "status_done_value": "Done",
    "status_skip_value": "Skip"
  },
  "dashboard": {
    "default_font": "Inter",
    "fonts": [
      "Inter",
      "Segoe UI",
      "Poppins",
      "JetBrains Mono",
      "Georgia"
    ],
    "default_upload_target": "none"
  },
  "text_processing": {
    "max_quote_length": 280,
    "max_lines": 10,
    "padding": 100
