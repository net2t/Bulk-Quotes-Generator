{
  "image_settings": {
    "width": 1080,
    "height": 1080,
    "quality": 95,
    "format": "PNG"
  },
  "watermark": {
    "opacity": 0.6,
    "position": "bottom-right",
    "max_size_percent": 15
  },
  "fonts": {
    "quote": {
      "minimal": 50,
      "bright": 55,
      "elegant": 48,
      "bold": 60,
      "modern": 52
    },
    "author": {
      "minimal": 30,
      "bright": 32,
      "elegant": 28,
      "bold": 35,
      "modern": 30
    }
  },
  "colors": {
    "minimal": {
      "background": "#FFFFFF",
      "text": "#2C3E50",
      "author": "#7F8C8D"
    },
    "bright": {
      "gradients": [
        [
          "#FF6B6B",
          "#4ECDC4"
        ],
        [
          "#A8E6CF",
          "#FFD3B6"
        ],
        [
          "#FF8B94",
          "#FFAAA5"
        ],
        [
          "#FFA07A",
          "#FFD700"
        ]
      ]
    },
    "elegant": {
      "backgrounds": [
        "#FFF5F7",
        "#F0F8FF",
        "#F5F5DC",
        "#FFF0F5",
        "#F0FFF0"
      ],
      "border": "#D4A5A5",
      "text": "#4A4A4A"
    },
    "bold": {
      "backgrounds": [
        "#FF4757",
        "#3742FA",
        "#2ED573",
        "#FFA502",
        "#5F27CD"
      ]
    },
    "modern": {
      "background": "#F5F5F5",
